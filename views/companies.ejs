<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WorkWise - Companies</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="assets/companies.css">
    <style>
        /* Fix header consistency */
        #header-placeholder {
            position: sticky;
            top: 0;
            z-index: 1000;
            background-color: white;
        }
        
        /* Ensure footer stays at bottom */
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        
        .container {
            flex: 1;
        }
    </style>
</head>
<body>
    <!-- Include the header -->
    <%- include('partials/header') %>

    <div class="container mt-5">
        <h1 class="text-center mb-4">Browse Companies</h1>
        
        <!-- Search Form -->
        <div class="row mb-4">
            <div class="col-md-6 mx-auto">
                <form class="search-form d-flex">
                    <input type="text" id="company-name" class="form-control me-2" placeholder="Search companies..." list="company-suggestions">
                    <datalist id="company-suggestions"></datalist>
                    <button type="submit" class="btn btn-primary">Search</button>
                </form>
            </div>
        </div>
        
        <!-- Companies Grid -->
        <div class="row" id="company-grid">
            <!-- Companies will be loaded here -->
        </div>
    </div>

    <!-- Include the footer -->
    <%- include('partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="assets/auth.js"></script>
    <script src="assets/companies.js"></script>
</body>
</html> 